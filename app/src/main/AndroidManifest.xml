<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.teamplanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/memosport"
        android:label="MemoSport"
        android:roundIcon="@mipmap/memosport"
        android:supportsRtl="true"
        android:theme="@style/Theme.TeamPlanner">
        <activity android:name=".duties.DutyDetailsActivity"></activity>
        <activity android:name=".profile.EditProfileActivity" />
        <activity android:name=".teams.TeamDetailsActivity" />
        <activity android:name=".games.GameDetailsActivity" />
        <activity android:name=".teams.NewTeamActivity" />
        <activity android:name=".duties.MyDutiesActivity" />
        <activity android:name=".duties.NewDutyActivity" />
        <activity android:name=".games.NewGameActivity" />
        <activity android:name=".LaunchingScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".profile.MyProfileActivity" />
        <activity android:name=".teams.MyTeamsActivity" />
        <activity android:name=".games.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>